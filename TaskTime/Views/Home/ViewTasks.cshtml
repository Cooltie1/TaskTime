@{
    ViewData["Title"] = "View Tasks";
}

@model List<ApplicationResponse>

<h1>Here is your list of tasks. Please edit, and mark completed when you have completed the task.</h1>
<br />
<br />
<br />


<div class="row">
    <div class="col-12">
        <h1>Stephen Covey's Time Management Matrix</h1>
    </div>
</div>



<div class="row">
    <div class="col-2 border-between"></div>
    <div class="col-5">
        <h3>Urgent</h3>
    </div>
    <div class="col-5">
        <h3>Not Urgent</h3>
    </div>
</div>



<div class="row">
    <div class="col-2">
        <h2>IMPORTANT</h2>
    </div>
    <div class="col-5">
        <h3>Quadrant 1</h3>
        <br />

        @foreach (var x in Model)
        {
            if (@x.Quadrant == "Quadrant I")
            {
                <ul style="font-weight:bold">Task:@x.Task</ul>
                <ul>Due date: @x.DueDate</ul>
                <ul>@x.Quadrant</ul>
                <ul>Category: @x.Category</ul>
@*We will take this off later
    for now, it's just to visualize (:*@
                <ul>Completed: @x.Completed</ul>
                <ul><a asp-controller="Home" asp-action="Edit" asp-route-movie="@x.AppResponseId">Edit</a></ul>
                <ul><a asp-controller="Home" asp-action="Delete" asp-route-movie="@x.AppResponseId">Delete</a></ul>
                <br /><br />
            }
        }

    </div>
    <div class="col-5">
